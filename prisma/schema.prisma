generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // dev 环境用 sqlite，部署可换 postgresql
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  notes     Note[]
}

model Note {
  id        String   @id @default(cuid())
  title     String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}
